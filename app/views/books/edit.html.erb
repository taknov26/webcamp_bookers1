<h2>Editing Book</h2>

    <%= form_with model:@book, local:true do |f| %>
    <%= render 'layouts/error_messages', book: f.object %>
    <div class=text-box-title>本のタイトル</div>
    <%= f.text_field :title %>
    <div class=text-box-body>感想</div>
    <%= f.text_area :body %>
    <p>
    <%= f.submit 'Update Book' %>
    </p>
    <% end %>
    <%= link_to "Show", book_path(@book) %>
    <%= link_to "Back", books_path %>
