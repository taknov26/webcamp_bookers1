<% if flash[:notice] %>
<div class="flash">
<%=flash[:notice] %>
</div>
<% end %>

<body>
    <h1>Books</h1>
    <table>
    <thead>
      <th>本のタイトル</th>
      <th>感想</th>
      <th colspan="3"></th>
    </thead>
    <tbody>
      <!--<% @books.each do |book| %>-->
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td>
        <%= link_to "Show", book %>
      </td>
      <td>
        <%= link_to "Edit", edit_book_path(book.id) %>
      </td>
      <td>
        <%= link_to "Destroy", book, method: :delete, "data-confirm" => "Are you sure?" %>
      </td>
    </tbody>
    <!--<% end %>-->
  </table>

  <div class="new-article">
    <h2>New book</h2>
    <%= form_with model:@book, local:true do |f| %>
    <%= render 'layouts/error_messages', book: f.object %>
    <div class=text-box-title>本のタイトル</div>
    <%= f.text_field :title %>
    <div class=text-box-body>感想</div>
    <%= f.text_area :body %>
    <p>
    <%= f.submit 'Create Book' %>
    </p>
    <% end %>
  </div>
</body>
